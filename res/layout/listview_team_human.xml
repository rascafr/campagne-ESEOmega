<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/container_dropshadow"
    android:padding="0dp" >
    
	<ImageView
		android:id="@+id/team_humain_pict"
		android:layout_width="90dp"
		android:layout_height="90dp"
	   	android:layout_gravity="center_horizontal"
	   	android:maxWidth="150dp"  
	    android:maxHeight="150dp"  
	    android:scaleType="fitCenter"  
	   	android:cropToPadding="true"
	   	android:adjustViewBounds="false"
	   	android:src="@drawable/notfound"
		/>  
        
    
    <LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	   	android:layout_gravity="center_vertical"
	   	android:gravity="center_vertical"
	    android:orientation="vertical"
	    android:layout_marginLeft="20dp">
	    <!-- android:padding="6.5dp" --> 
        
        <TextView android:id="@+id/team_name"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="16sp"
	         android:textStyle="bold"
	         android:gravity="left"
	         android:text="Jean Moulin"
	         android:textColor="@color/list_background"
	         android:layout_marginBottom="3dp"
	         />
    
	    <TextView android:id="@+id/team_human_description"
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content"
		         android:textSize="13sp"
		         android:textStyle="normal"
		         android:gravity="left"
		         android:text="MÃ©daille d'honneur"
		         android:textColor="@color/medium"
		         />   
	    
	</LinearLayout>    
	
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <!-- Date : day and dayname below -->
    <LinearLayout 
	    android:layout_width="100dp"
		android:layout_height="100dp"
	   	android:layout_gravity="center_vertical"
	   	android:padding="10dp"
	    android:orientation="horizontal" >
	    
        <LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	   	android:layout_gravity="center_vertical"
	   	android:padding="10dp"
	    android:orientation="vertical"
	    android:background="@color/list_background" >
	    
	        <TextView android:id="@+id/dayNum"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="28sp"
	         android:textStyle="bold"
	         android:gravity="center"
	         android:text="18"
	         android:textColor="@color/list_item_title"
	         />
	        
	        <TextView android:id="@+id/dayName"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="16sp"
	         android:textStyle="bold"
	         android:gravity="center"
	         android:text="mai"
	         android:textColor="@color/list_item_title"
	         />
	        
        </LinearLayout>
        
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="80dp"
	   	android:layout_gravity="center_vertical"
	   	android:padding="10dp"
	    android:orientation="vertical" >
    
	    <TextView android:id="@+id/animName"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="16sp"
	         android:textStyle="bold"
	         android:text="Crepes day"
	         />
	    
	    <TextView android:id="@+id/animDesc"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="12sp"
	         android:text="On va faire des crÃªpes."/>
	    
	    <TextView android:id="@+id/animPlace"
	         android:layout_marginTop="6dp"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="12sp"
	         android:textStyle="italic"
	         android:textColor="@color/medium"
	         android:text="Cafet ESEO"/>
	    
	</LinearLayout>    
    

</LinearLayout>

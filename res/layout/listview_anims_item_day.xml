<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <!-- Date : day and dayname below -->
    <LinearLayout 
	    android:layout_width="90dp"
		android:layout_height="90dp"
	   	android:layout_gravity="center_vertical"
	   	android:padding="10dp"
	    android:orientation="horizontal" >
	    
        <RelativeLayout 
        android:id="@+id/layoutAnimDay"
	    android:layout_width="match_parent"
		android:layout_height="match_parent"
	   	android:layout_gravity="center"
	    android:background="@color/list_background" >
	    
           	<LinearLayout
           	    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			   	android:layout_gravity="center"
           	    android:layout_centerInParent="true"
           	    android:orientation="vertical">
           	    
           	    <TextView android:id="@+id/animHour"
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:textSize="24sp"
			         android:textStyle="bold"
		             android:gravity="center"
			         android:text="12"
			         android:textColor="@color/list_item_title"
			         />
			        
			        <TextView android:id="@+id/animMinute"
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:layout_below="@id/animHour"
			         android:textSize="24sp"
		             android:gravity="center"
			         android:text="30"
			         android:layout_marginTop="-1.5dp"
			         android:textColor="@color/list_item_title"
			         />
           	    
           	</LinearLayout>
	    
	        
	        
        </RelativeLayout>
        
        
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="fill_parent"
		android:layout_height="80dp"
	   	android:layout_gravity="center_vertical"
	   	android:padding="10dp"
	    android:orientation="vertical" >
    
	    <TextView android:id="@+id/animName"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="16sp"
	         android:textStyle="bold"
	         android:text="Crepes day"
	         />
	    
	    <TextView android:id="@+id/animDesc"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="12sp"
	         android:text="On va faire des crÃªpes."/>
	    
	    <TextView android:id="@+id/animPlace"
	         android:layout_marginTop="6dp"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:textSize="12sp"
	         android:textStyle="italic"
	         android:textColor="@color/medium"
	         android:text="Cafet ESEO"/>
	    
	</LinearLayout>    
    

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:background="@drawable/container_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
    <ImageView
			android:id="@+id/animPictureDialog"
			android:layout_width="match_parent"
			android:layout_height="90dp"
		   	android:layout_gravity="center_horizontal"
		   	android:adjustViewBounds="false"
		   	android:scaleType="centerCrop"
		   	android:src="@drawable/crepes"
			/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        
        <ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
		   	android:src="@drawable/ic_query"
		   	android:layout_gravity="center_vertical"
		   	
			/>
	    
	    <TextView
	        android:id="@+id/animDateDialog"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/list_background"
	        android:text="Mardi 31 mars, à 12h00"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        
        <ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
		   	android:src="@drawable/ic_subject"
		   	android:layout_gravity="center_vertical"
			/>
    
	    <TextView
	        android:id="@+id/animDescDialog"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/list_background"
	        android:text="On vous distribue des crêpes gratuitement, et ce toute la journée, même aux pauses !"/>
	    
	</LinearLayout>
	
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        
        <ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
		   	android:src="@drawable/ic_place"
		   	android:layout_gravity="center_vertical"
			/>
    
	    <TextView
	        android:id="@+id/animPlaceDialog"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_marginRight="8dp"
	        android:textColor="@color/list_background"
	        android:text="Cafétéria ESEO"/>
	    
    </LinearLayout>
	    
	    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="14dp"
	    android:layout_marginBottom="8dp"
	    android:layout_gravity="center" >
 
		     <fr.bde_eseo.eseomega.controls.FButton
	            android:id="@+id/buttonCloseAnimDialog"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				fbutton:buttonColor="@color/fbutton_color_silver"
				fbutton:shadowColor="@color/clear"
				fbutton:shadowEnabled="true"
				fbutton:shadowHeight="2dp"
				fbutton:cornerRadius="2.5dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:layout_marginRight="3dp"
				android:text="Fermer" />
		     
		     <fr.bde_eseo.eseomega.controls.FButton
	            android:id="@+id/buttonAddAnimToCalendar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				fbutton:buttonColor="@color/fbutton_color_silver"
				fbutton:shadowColor="@color/clear"
				fbutton:shadowEnabled="true"
				fbutton:shadowHeight="2dp"
				fbutton:cornerRadius="2.5dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:layout_marginLeft="3dp"
				android:text="Ajouter à l'agenda" />
	     
	     </LinearLayout>
 
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="55dp"
	    android:orientation="horizontal"
	    android:padding="10dp">
    
    <TextView android:id="@+id/animName"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textSize="22sp"
	         android:textStyle="normal"
	         android:gravity="left"
	         android:layout_marginTop="6dp"
	         android:text="Lundi"
	         android:textColor="@color/list_background"
	         />
    
    
    
    <ImageView
			android:id="@+id/anim_header_pict"
			android:layout_width="20dp"
			android:layout_height="20dp"
		   	android:layout_gravity="end"
		   	android:adjustViewBounds="false"
		   	android:scaleType="centerCrop"
		   	android:src="@drawable/ic_down_bl"
		   	android:layout_marginTop="12dp"
		   	android:layout_alignParentRight="true"
			/>
    
    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="1.3dp"
			android:layout_toRightOf="@id/animName"
			android:layout_toLeftOf="@id/anim_header_pict"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"
			android:layout_marginTop="22.5dp"
        	android:background="@color/medium">
    </LinearLayout>
    
    
</RelativeLayout>      